<h1>Welcome!</h1>
<div>
	<h2>Register</h2>
	<% if flash[:errors] %>
		<% flash[:errors].each do |err| %>
			<p><%= err %></p>
		<% end %>
	<% end %>
	<%= form_for @user do |f| %>
		<p>
			<%= f.label :first_name, "First Name" %>
			<%= f.text_field :first_name %>
		</p>
		<p>
			<%= f.label :last_name, "Last Name" %>
			<%= f.text_field :last_name %>
		</p>
		<p>
			<%= f.label :email %>
			<%= f.email_field :email %>
		</p>
		<p>
			<%= f.label :city, "Location" %>
			<%= f.text_field :city %>
			<%= f.collection_select(:state_id, @states, :id, :abbv) %>
		</p>
		<p>
			<%= f.label :password %>
			<%= f.password_field :password %>
		</p>
		<p>
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation %>
		</p>
		<p>
			<%= f.submit :value => "Register" %>
		</p>
	<% end %>
</div>
<div>
	<h2>Login</h2>
	<% if flash[:alert] %>
		<p><%= flash[:alert] %></p>
	<% end %>
	<%= form_for @session, url: sessions_path, method: :post do |f| %>
		<p>
			<%= f.label :email %>
			<%= f.email_field :email %>
		</p>
		<p>
			<%= f.label :password %>
			<%= f.password_field :password %>
		</p>
		<p>
			<%= f.submit :value => "Log In" %>
		</p>
	<% end %>
</div>